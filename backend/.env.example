# ===================================
# NOTION INTEGRATION CONFIGURATION
# ===================================

# Notion API Integration Token
# Get from: https://www.notion.so/my-integrations
NOTION_API_TOKEN=secret_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Notion Database ID for Orders
# Get from your Notion database URL: https://notion.so/workspace/DATABASE_ID?v=...
NOTION_ORDERS_DATABASE_ID=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ===================================
# DATABASE CONFIGURATION
# ===================================

# PostgreSQL connection (recommended for production)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=souvenir_management
DB_USER=your_username
DB_PASSWORD=your_password

# Or use SQLite for simple local setup
# DB_TYPE=sqlite
# DB_PATH=./data/souvenir.db

DB_TYPE=postgres

# ===================================
# EMAIL & REPORTING CONFIGURATION
# ===================================

# Email Service (nodemailer SMTP or SendGrid)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# SendGrid alternative (comment out SMTP settings above if using this)
# SENDGRID_API_KEY=SG.XXXXXXXXXXXXXXXXXXXXXXXXXX

# Report Recipients (comma-separated)
REPORT_RECIPIENTS=owner@yourcompany.com,manager@yourcompany.com

# Report Schedule (cron format)
# Daily report at 8:00 AM
DAILY_REPORT_SCHEDULE=0 8 * * *
# Weekly report every Monday at 9:00 AM
WEEKLY_REPORT_SCHEDULE=0 9 * * 1
# Monthly report on 1st day at 10:00 AM
MONTHLY_REPORT_SCHEDULE=0 10 1 * *

# ===================================
# COMPANY INFORMATION
# ===================================

COMPANY_NAME=Your Souvenir Company
COMPANY_EMAIL=contact@yourcompany.com
COMPANY_TIMEZONE=America/Mexico_City
CURRENCY=MXN

# ===================================
# API SERVER CONFIGURATION
# ===================================

PORT=3000
NODE_ENV=development

# ===================================
# SECURITY CONFIGURATION (REQUIRED)
# ===================================

# JWT Secret for admin authentication (REQUIRED - use a strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-strong-random-secret-key-here-min-32-chars

# Admin credentials (REQUIRED)
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_strong_admin_password

### Cloudinary Configuration (REQUIRED for image uploads)
# Get from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Webhook Security (REQUIRED for Make.com integration)
MAKE_WEBHOOK_SECRET=your_secure_webhook_secret_here

# ===================================
# ANALYTICS CONFIGURATION
# ===================================

# Enable/disable specific reports
ENABLE_DAILY_REPORTS=true
ENABLE_WEEKLY_REPORTS=true
ENABLE_MONTHLY_REPORTS=true
ENABLE_YEARLY_REPORTS=false

# Report format
REPORT_FORMAT=both  # options: html, pdf, both

# Low profit margin alert threshold (percentage)
LOW_MARGIN_THRESHOLD=20
